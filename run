#!/bin/sh
WEB_PID="web.pidfile"
WS_PID="ws.pidfile"

if [ -f $WEB_PID ]; then
  kill `cat $WEB_PID`
  rm $WEB_PID
fi
bundle exec rackup >log.web.txt 2>&1 &
echo $! >$WEB_PID

if [ -f $WS_PID ]; then
  kill `cat $WS_PID`
  rm $WS_PID
fi
bundle exec ruby ./websocket.rb >log.ws.txt 2>&1  &
echo $! >$WS_PID

